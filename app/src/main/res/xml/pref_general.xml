<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_localizacao_key"
        android:title="@string/pref_localizacao_label"
        android:defaultValue="@string/pref_localizacao_default_value"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:title="@string/pref_unidade_temperatura_label"
        android:key="@string/pref_unidade_temperatura_key"
        android:defaultValue="@string/pref_unidade_temperatura_default_value"
        android:entryValues="@array/pref_unidade_temperatura_values"
        android:entries="@array/pref_unidade_temperatura_options" />

</PreferenceScreen>
